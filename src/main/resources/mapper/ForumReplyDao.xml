<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="tech.ufun.forum.mapper.ForumReplyMapper">

    <resultMap type="tech.ufun.forum.domain.ForumReply" id="ForumReplyMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="replyId" column="reply_id" jdbcType="VARCHAR"/>
        <result property="postId" column="post_id" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="authorId" column="author_id" jdbcType="VARCHAR"/>
        <result property="replyContent" column="reply_content" jdbcType="VARCHAR"/>
        <result property="replyTime" column="reply_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="findById" resultMap="ForumReplyMap">
        select
          id, reply_id, post_id, author, author_id, reply_content, reply_time
        from forum_reply
        where reply_id = #{replyId}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="findAll" resultMap="ForumReplyMap">
        select
          id, reply_id, post_id, author, author_id, reply_content, reply_time
        from forum_reply
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="replyId != null and replyId != ''">
                and reply_id = #{replyId}
            </if>
            <if test="postId != null and postId != ''">
                and post_id = #{postId}
            </if>
            <if test="author != null and author != ''">
                and author = #{author}
            </if>
            <if test="authorId != null and authorId != ''">
                and author_id = #{authorId}
            </if>
            <if test="replyContent != null and replyContent != ''">
                and reply_content = #{replyContent}
            </if>
            <if test="replyTime != null">
                and reply_time = #{replyTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into forum_reply(reply_id, post_id, author, author_id, reply_content, reply_time)
        values (#{replyId}, #{postId}, #{author}, #{authorId}, #{replyContent}, #{replyTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update forum_reply
        <set>
            <if test="postId != null and postId != ''">
                post_id = #{postId},
            </if>
            <if test="author != null and author != ''">
                author = #{author},
            </if>
            <if test="authorId != null and authorId != ''">
                author_id = #{authorId},
            </if>
            <if test="replyContent != null and replyContent != ''">
                reply_content = #{replyContent},
            </if>
            <if test="replyTime != null">
                reply_time = #{replyTime},
            </if>
        </set>
        where reply_id = #{replyId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from forum_reply where reply_id = #{replyId}
    </delete>

</mapper>